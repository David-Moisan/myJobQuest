{% extends "base.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/company.css')}}">
{% endblock %}

{% block title %}Edit Profile
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="route m-0">
                        <li class="route-item">
                            <a href="{{ path('home')}}">Home</a>
                        </li>
                        <li class="route-item">
                            <a href="{{ path('account-user', {id: app.user.id})}}">Profile</a>
                        </li>
                        <li class="route-item">
                            <a href="{{ path('edit-profile', {id: app.user.id})}}">Edit Profile</a>
                        </li>
                    </ol>
                </div>
                <h4 class="page-title">Profile</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-8">
                            {{ form_start(form) }}
                            <div class="row g-2">
                                <div class="mb-3 col-md-6">
                                    {{ form_row(form.firstname) }}
                                </div>
                                <div class="mb-3 col-md-6">
                                    {{ form_row(form.lastname) }}
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="form-group">
                                    {{ form_row(form.address) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8">
                                    {{ form_row(form.city) }}
                                </div>
                                <div class="col-md-4">
                                    {{ form_row(form.postalCode) }}
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="form-group">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="form-group">
                                    {{ form_row(form.password) }}
                                </div>
                            </div>
                            <button type="submit" class="mt-2 btn bt-lg btn-primary">Edit</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}